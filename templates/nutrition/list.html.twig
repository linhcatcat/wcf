{% extends 'base.html.twig' %}

{% block title %}Danh sách sản phẩm{% endblock %}

{% block body %}
	<div class="wrap-container">
		<div class="container">
			<div class="winco-food list product">
				<div class="title">
					<h1>Thông tin dinh dưỡng</h1>
				</div>
				{% for p in nutritions %}
				<div class="row">
					<div class="col-md-8">
						<div class="list-item">
							<div class="row">
								<div class="col-md-4 thumb">
									<a href="/thong-tin-dinh-duong/chi-tiet/{{p.id}}/{{p.slug}}"><img src="{{ vich_uploader_asset(p, 'imageFile') }}"></a>
								</div>
								<div class="col-md-8">
									<h3 class="title"><a href="/thong-tin-dinh-duong/chi-tiet/{{p.id}}/{{p.slug}}">{{p.title}}</a></h3>
									{{p.summary|raw}}
								</div>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
				<div>
					{{ knp_pagination_render(nutritions) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}