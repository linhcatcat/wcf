{% extends 'base.html.twig' %}

{% block title %}Liên hệ{% endblock %}

{% block body %}
	<div class="wrap-container">
		<div class="container">
			{% for flash_message in app.session.flashBag.get('success') %}
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-success">
						{{ flash_message }}
					</div>
				</div>
			</div>
			{% endfor %}
			<div class="winco-food intro">
				<div class="title">
					<h2>Liên hệ</h2>
				</div>
				<div class="row">
					<div class="col-md-6">
						{{ form_start(form) }}
						{{ form_widget(form) }}
						{{ form_end(form) }}
					</div>
					<div class="col-md-6">
						{% if contact %}
							{{ contact.content|raw }}
						{% endif %}
					</div>
				</div>
				<div class="row mt20">
					<div class="col-md-12">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13184.76738549005!2d106.60197405218928!3d10.74567226286543!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752dc9581bca63%3A0x194f9776e42f6416!2zODIgxJDGsOG7nW5nIHPhu5EgMTMsIELDrG5oIFRy4buLIMSQw7RuZyBCLCBCw6xuaCBUw6JuLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1596181790524!5m2!1svi!2s" width="100%" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}